{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2015",
    "moduleResolution": "Node",
    "lib": [
      "ES2018"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "__mocks__/**/*.ts",
    "__test__/**/*.ts",
    "__test__/**/*.js",
    "src/**/*.ts",
    "jest.config.js",
    "package.json"
  ],
  "exclude": [
    "node_modules/**",
    "dist/**",
    "bin/**",
    "types/**",
    "coverage/**"
  ]
}
