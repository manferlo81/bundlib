{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "Node10",
    "lib": [],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "declaration": true,
    "declarationMap": true,
    "newLine": "lf"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "transpileOnly": true,
    "preferTsExts": false
  },
  "include": [
    "__mocks__",
    "__test__",
    "src",
    "package.json",
    "jest.config.ts",
    "bundlib.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "bin",
    "coverage"
  ]
}
