{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "declarations/*"
      ]
    }
  },
  "exclude": [
    "node_modules/**",
    "dist/**",
    "bin/**",
    "types/**",
    "coverage/**"
  ]
}
