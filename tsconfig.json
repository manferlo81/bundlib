{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "lib": [],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true
  },
  "include": [
    "__mocks__/**/*.ts",
    "__test__/**/*.ts",
    "__test__/**/*.js",
    "src/**/*.ts",
    "eslint.config.mjs",
    "jest.config.ts",
    "package.json",
    "bundlib.config.ts"
  ],
  "exclude": [
    "node_modules/**",
    "dist/**",
    "bin/**",
    "coverage/**"
  ]
}
