{
  "include": [
    "__test__",
    "__mocks__",
    "src",
    "package.json",
    "bundlib.config.ts"
  ],
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "node_modules/.tsbuildinfo/ts-check.tsbuildinfo",
    "noEmit": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node10"
    },
    "transpileOnly": true,
    "preferTsExts": false
  },
}
