{
  "name": "bundlib",
  "displayName": "Bundlib",
  "version": "0.16.3",
  "description": "An automatic configuration manager for Rollup.js.",
  "keywords": [
    "library",
    "bundle",
    "bundler",
    "typescript",
    "rollup"
  ],
  "main": "dist/bundlib.js",
  "module": "dist/bundlib.mjs",
  "bin": "bin/bundlib-cli.js",
  "types": "types/index.d.ts",
  "typings": "types/index.d.ts",
  "scripts": {
    "dev": "ts-node -T -P tsconfig-ts-node.json src/cli -dw",
    "build": "ts-node -T -P tsconfig-ts-node.json src/cli -d",
    "test": "jest --color -w 3",
    "test:watch": "npm test -- --watch-all",
    "clean": "rimraf bin dist types coverage node_modules/.cache/bundlib node_modules/.cache/jest",
    "lint": "eslint src/**/*.ts __test__/**/*.{js,ts}",
    "prerelease": "npm run clean && npm run lint && npm test && npm run build",
    "release": "standard-version"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "builtin-modules": "^3.1.0",
    "camelcase": "^6.0.0",
    "chalk": "^4.0.0",
    "commander": "^5.1.0",
    "cosmiconfig": "^6.0.0",
    "gen-unit": "0.0.6",
    "load-json-file": "^6.2.0",
    "pretty-ms": "^7.0.0",
    "resolve-from": "^5.0.0",
    "slash": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@types/jest": "^25.2.1",
    "@types/mock-fs": "^4.10.0",
    "@types/node": "^13.13.5",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "chokidar": "^3.4.0",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "mock-fs": "^4.12.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.8.2",
    "rollup-plugin-add-shebang": "^0.3.1",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-export-equals": "^0.3.6",
    "rollup-plugin-strip-shebang": "^1.2.9",
    "rollup-plugin-typescript2": "^0.27.0",
    "standard-version": "^8.0.0",
    "ts-jest": "^25.5.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "rollup": "^2.0.0"
  },
  "files": [
    "bin",
    "dist",
    "types"
  ],
  "author": {
    "name": "Manuel Fernandez",
    "email": "manferlo81@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manferlo81/bundlib.git"
  },
  "bugs": {
    "url": "https://github.com/manferlo81/bundlib/issues"
  },
  "homepage": "https://github.com/manferlo81/bundlib#readme",
  "license": "MIT"
}
