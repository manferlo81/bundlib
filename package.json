{
  "name": "bundlib",
  "version": "0.8.4",
  "description": "An automatic javascript library bundler using Typescript and Rollup.js",
  "main": "dist/bundlib.cjs.js",
  "module": "dist/bundlib.es.js",
  "bin": "bin/bundlib-cli.js",
  "types": "types/index.d.ts",
  "typings": "types/index.d.ts",
  "bundlib": {
    "input": "src/api/index.ts",
    "bin": "src/cli/index.ts"
  },
  "scripts": {
    "clean": "rm -rf node_modules/.cache/bundlib node_modules/.cache/jest bin dist types coverage",
    "dev": "ts-node -P ts-node-tsconfig.json src/cli -dw",
    "build": "tslint src/**/*.ts && ts-node -P ts-node-tsconfig.json src/cli -d",
    "test": "jest --color -w 3",
    "preversion": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "library",
    "bundle",
    "bundler",
    "typescript",
    "rollup"
  ],
  "dependencies": {
    "@babel/core": "^7.5.0",
    "babel-plugin-transform-async-to-promises": "^0.8.12",
    "builtin-modules": "^3.1.0",
    "camelcase": "^5.3.1",
    "chalk": "^2.4.2",
    "chokidar": "^3.0.2",
    "commander": "^2.20.0",
    "filesize": "^4.1.2",
    "lodash": "^4.17.11",
    "pretty-ms": "^5.0.0",
    "read-pkg": "^5.1.1",
    "rollup": "^1.16.6",
    "rollup-plugin-add-shebang": "^0.3.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-export-equals": "^0.3.2",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-strip-shebang": "^1.2.4",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript2": "^0.21.2",
    "typescript": "^3.5.2"
  },
  "devDependencies": {
    "@types/filesize": "^4.1.0",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.135",
    "@types/node": "^12.0.12",
    "@types/rollup-plugin-buble": "^0.19.1",
    "@types/rollup-plugin-json": "^3.0.2",
    "eslint": "^6.0.1",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0"
  },
  "files": [
    "bin",
    "dist",
    "types"
  ],
  "author": {
    "name": "Manuel Fernandez",
    "email": "manferlo81@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manferlo81/bundlib.git"
  },
  "bugs": {
    "url": "https://github.com/manferlo81/bundlib/issues"
  },
  "homepage": "https://github.com/manferlo81/bundlib#readme",
  "license": "MIT"
}
