{
  "name": "bundlib",
  "version": "0.1.0",
  "description": "A Zero-configuration, automatic javascript library bundler using Typescript and Rollup.js",
  "main": "dist/bundlib.cjs.js",
  "module": "dist/bundlib.es.js",
  "bin": "bin/bundlib-cli.js",
  "typings": "types/index.d.ts",
  "scripts": {
    "lint": "tslint src/**/*.ts",
    "clean": "rimraf dist types coverage",
    "dev": "ts-node src-bin -dw",
    "build": "npm run lint && ts-node src-bin -d",
    "test": "jest",
    "preversion": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "library",
    "bundle",
    "bundler",
    "typescript",
    "rollup"
  ],
  "dependencies": {
    "@babel/core": "^7.4.3",
    "babel-plugin-transform-async-to-promises": "^0.8.10",
    "chalk": "^2.4.2",
    "commander": "^2.20.0",
    "ora": "^3.4.0",
    "rollup": "^1.10.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-dts": "^0.15.0",
    "rollup-plugin-export-equals": "^0.1.0",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-terser": "^4.0.4",
    "typescript": "^3.4.4"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/rollup-plugin-buble": "^0.19.1",
    "jest": "^24.7.1",
    "rimraf": "^2.6.3",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0"
  },
  "files": [
    "bin",
    "dist",
    "types"
  ],
  "author": "Manuel Fernandez <manferlo81@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manferlo81/bundlib.git"
  },
  "bugs": {
    "url": "https://github.com/manferlo81/bundlib/issues"
  },
  "homepage": "https://github.com/manferlo81/bundlib#readme",
  "license": "MIT"
}
